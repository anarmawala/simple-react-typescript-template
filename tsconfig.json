{
    "compilerOptions": {
        "target": "es5" /* Specify ECMAScript target version */,
        "sourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "removeComments": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "public",
        "build",
    ]
}